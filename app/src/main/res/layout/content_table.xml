<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ts.placement.linearapp.TableActivity"
    tools:showIn="@layout/activity_table"
    android:background="#fef8f9">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="50px"
            android:layout_height="50px"
            android:text="NAME :"
            android:id="@+id/textView2"
            android:layout_column="1" />

        <EditText
            android:layout_width="400px"
            android:layout_height="75px"
            android:id="@+id/editText"
            android:layout_column="11" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="PASSWORD :"
            android:id="@+id/textView3"
            android:layout_column="1"
            android:layout_width="50px"
            android:layout_height="50px" />

        <EditText
            android:layout_width="300px"
            android:layout_height="75px"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_column="11" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup android:layout_column="1"
            android:layout_width="100px"
            android:layout_height="150px"
            android:layout_span="11"
            android:weightSum="1">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="10px"
                android:text="Male"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:layout_weight="0.33" />

            <RadioButton
                android:layout_width="200px"
                android:layout_height="10px"
                android:text="Female"
                android:id="@+id/radioButton"
                android:checked="false"
                android:layout_weight="0.38" />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Courses :"
            android:id="@+id/textView4"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:text="Java"
            android:id="@+id/c1"
            android:layout_column="1"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:id="@+id/c2"
            android:layout_column="11"
            android:checked="false" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:text="Testing"
            android:id="@+id/c3"
            android:layout_column="1"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Big Data"
            android:id="@+id/c4"
            android:layout_column="11"
            android:checked="false" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="SUBMIT"
            android:id="@+id/button"
            android:layout_column="1"
            android:onClick="goToNext"/>
    </TableRow>


</TableLayout>
